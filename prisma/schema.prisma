generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  borrows   Borrow[]

  @@index([name])
}

model Book {
  id        Int      @id @default(autoincrement())
  name      String
  borrows   Borrow[]

  @@index([name])
}

model Borrow {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int 
  book      Book     @relation(fields: [bookId], references: [id])
  bookId    Int
  userScore Int?
  borrowDate DateTime @default(now())
  returnDate DateTime?

  @@index([bookId])
  @@index([bookId, userScore])
  @@index([userId])
  @@index([bookId, returnDate])
}
